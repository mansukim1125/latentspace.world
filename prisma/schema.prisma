generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id          String    @id @unique
  name        String
  period      String
  position    String
  team        String
  description String
  Project     Project[]
}

model Project {
  id           String   @id @unique
  title        String
  slug         String   @unique
  excerpt      String
  category     String
  date         DateTime @default(now())
  period       String
  duration     String
  role         String
  team         String?
  stacks       String[] // 기술 스택
  links        Json // GitHub, Demo, Docs...
  companyId    String?
  achievements String[] // 성과 array
  content      String
  featured     Boolean // 메인 화면에 보여질 프로젝트 여부

  // Foreign key relation
  company Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
}

model Writing {
  id       String   @id @unique @db.VarChar(36)
  title    String
  slug     String   @unique @db.VarChar(255)
  excerpt  String
  category String
  date     DateTime
  readTime Int
  content  String
}

model Config {
  id             String   @id @default("config")
  writingHero    Json
  experienceHero Json
  mainHero       Json
  companyOrder   String[] // Experiences 화면에서 보여지는 회사 순서

  authorName       String   @db.VarChar(16)
  authorTitle      String
  authorSummary    String
  authorLocation   String
  authorExperience String
  authorAvatar     String?
  authorSkills     String[]
  authorSocial     Json
  authorBadges     String[]
  authorKeyMetrics Json
}
